extends layout

block content
  .container
    if errorMessage
      .alert.alert-danger= errorMessage
    if show
      form(action="/create-account" method="post")
        .mb-3
          label(for="name" class="form-label") Name
          input#name.form-control(type="text", name="name", value=name, required)
        .mb-3
          label(for="email" class="form-label") Email
          input#email.form-control(type="email", name="email", value=email, required)
        .mb-3
          label(for="password" class="form-label") Password
          input#password.form-control(type="password", name="password", value=password, required)
        button.btn.btn-light(type="submit", disabled=!isAnyFieldFilled) Create Account
    else
      if status
        h5= status
      button.btn.btn-light(type="button") Add another Account
